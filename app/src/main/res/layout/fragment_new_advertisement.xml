<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".NewAdvertisementFragment">

    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_gravity="center" android:animationResolution="@android:integer/config_longAnimTime"
            android:visibility="gone" android:progress="@android:integer/config_longAnimTime"
            android:progressDrawable="@color/colorPrimaryDark"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:background="@color/common_google_signin_btn_text_dark_default">

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/colorAccent">

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/common_google_signin_btn_text_dark_default"
                            android:layout_margin="5dp"
                            android:layout_centerInParent="true">

                <TextView
                        android:text="@string/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        android:layout_marginTop="10dp" android:layout_marginBottom="2dp"
                        android:textColor="@color/colorPrimary" android:textSize="18sp"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/spinnerType"
                        android:layout_below="@+id/textView" android:layout_marginBottom="5dp"
                        android:clickable="true" android:entries="@color/colorAccent"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarSize="@android:dimen/dialog_min_width_major" android:spinnerMode="dropdown"
                        android:dropDownWidth="wrap_content" android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="Race:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:layout_marginBottom="2dp"
                        android:layout_below="@+id/spinnerType" android:textColor="@color/colorPrimary"
                        android:textSize="18sp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                        android:typeface="sans"
                        android:textSize="14sp"
                        android:id="@+id/editTextRace"
                        android:layout_below="@+id/textView2"
                        android:layout_marginBottom="5dp" android:hint="Enter the pets race"
                        android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="Gender:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        android:layout_marginBottom="2dp"
                        android:layout_below="@+id/editTextRace" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                        android:typeface="sans"
                        android:textSize="14sp"
                        android:id="@+id/editTextGender"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="5dp" android:hint="Enter the pets gender"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <TextView
                        android:text="Description:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4"
                        android:layout_marginBottom="2dp"
                        android:layout_below="@+id/editTextGender" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/editTextDescription" android:maxLength="50"
                        android:layout_below="@+id/textView4"
                        android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                        android:typeface="sans"
                        android:textSize="14sp" android:hint="Enter a description"
                        android:maxLines="5" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"/>
                <TextView
                        android:text="City:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:layout_marginBottom="2dp"
                        android:layout_below="@+id/editTextDescription" android:textColor="@color/colorPrimary"
                        android:textSize="18sp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                        android:typeface="sans"
                        android:textSize="14sp"
                        android:id="@+id/editTextCity"
                        android:layout_below="@+id/textView5"
                        android:layout_marginBottom="5dp" android:hint="Enter the city"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <Button
                        android:text="Add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttonAdd"
                        android:layout_below="@+id/editTextCity"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textSize="14sp" android:background="@color/colorPrimaryDark"
                        android:textColor="@color/colorAccent" android:typeface="sans"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>