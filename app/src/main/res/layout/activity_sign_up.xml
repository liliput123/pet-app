<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity" android:background="@color/colorAccent" tools:background="@color/colorAccent"
        android:paddingLeft="15dp" android:paddingRight="15dp" android:id="@+id/relativeLayout1">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/relativeLayout2"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:layout_centerInParent="true">

        <ImageView
                android:layout_width="151dp"
                android:layout_height="94dp" app:srcCompat="@mipmap/ic_launcher_pet5"
                android:id="@+id/imageViewSignIn"
                android:layout_centerHorizontal="true" android:layout_marginTop="10dp"/>

        <TextView
                android:text="@string/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:textSize="14sp"
                android:textColor="@color/colorPrimary" app:fontFamily="sans-serif-medium"
                android:layout_below="@+id/imageViewSignIn" android:layout_marginLeft="10dp"
                android:layout_marginRight="10sp" android:layout_marginTop="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextName"
                android:hint="@string/enter_your_name"
                android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                android:typeface="sans"
                android:layout_below="@+id/textView2" android:layout_marginTop="2dp" android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp" android:textSize="14sp"/>
        <TextView
                android:text="@string/surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" android:textSize="14sp"
                android:textColor="@color/colorPrimary" app:fontFamily="sans-serif-medium"
                android:layout_below="@+id/editTextName" android:layout_marginTop="4dp"
                android:layout_marginLeft="10sp" android:layout_marginRight="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextSurname"
                android:hint="@string/enter_your_surname"
                android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                android:typeface="sans"
                android:textSize="14sp"
                android:layout_below="@+id/textView3" android:layout_marginTop="2dp" android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>
        <TextView
                android:text="@string/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" android:textSize="14sp"
                android:textColor="@color/colorPrimary" app:fontFamily="sans-serif-medium"
                android:layout_below="@+id/editTextSurname" android:layout_marginTop="4sp"
                android:layout_marginLeft="10sp" android:layout_marginRight="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextEmail"
                android:hint="@string/enter_your_email_address"
                android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                android:typeface="sans"
                android:textSize="14sp"
                android:layout_below="@+id/textView4" android:layout_marginTop="2dp" android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>
        <TextView
                android:text="@string/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" android:textSize="14sp"
                android:textColor="@color/colorPrimary" app:fontFamily="sans-serif-medium"
                android:layout_below="@+id/editTextEmail" android:layout_marginTop="4dp"
                android:layout_marginLeft="10sp" android:layout_marginRight="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPassword"
                android:hint="@string/enter_your_password"
                android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                android:typeface="sans"
                android:textSize="14sp"
                android:layout_below="@+id/textView11" android:layout_marginTop="2dp" android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>
        <TextView
                android:text="@string/repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" android:textSize="14sp"
                android:textColor="@color/colorPrimary" app:fontFamily="sans-serif-medium"
                android:layout_below="@+id/editTextPassword" android:layout_marginTop="4dp"
                android:layout_marginLeft="10sp" android:layout_marginRight="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPassword2"
                android:hint="@string/repeat_your_password"
                android:textColorHint="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                android:typeface="sans"
                android:textSize="14sp"
                android:layout_below="@+id/textView12" android:layout_marginTop="2dp" android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>
        <Button
                android:text="@string/sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSignUp2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="14sp" android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent" android:typeface="sans"
                android:layout_below="@+id/editTextPassword2" android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>

        <Button
                android:text="Already Have an Account? Sign In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonHaveAccountSignIn"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/buttonSignUp2"
                android:layout_marginTop="2dp"
                android:background="@color/common_google_signin_btn_text_dark_pressed"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_centerInParent="true" android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"/>

    </RelativeLayout>
    <Button
            android:text="See advertisements >> "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonShowAdvertisements"
            android:layout_marginBottom="0dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true" android:padding="0dp" android:textSize="16sp"/>
</RelativeLayout>