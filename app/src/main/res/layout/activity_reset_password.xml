<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResetPasswordActivity" android:id="@+id/relativeLayout3" android:background="@color/common_google_signin_btn_text_dark_default"
        android:paddingLeft="15dp" android:paddingRight="15dp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/relativeLayout4"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:layout_margin="5dp"
                android:layout_centerInParent="true">
            <ImageView
                    android:layout_width="151dp"
                    android:layout_height="94dp" app:srcCompat="@mipmap/ic_launcher_pet3"
                    android:id="@+id/imageResetPassword"
                    android:layout_centerHorizontal="true" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="Enter your email to reset your password"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    app:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/imageResetPassword" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextEmail3"
                    android:hint="@string/enter_your_email_address" android:textColor="@color/colorAccent"
                    android:layout_below="@+id/textView7" android:textColorHint="@color/colorPrimaryDark"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="2dp"
                    android:textSize="14sp"/>

            <Button
                    android:text="Reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonResetPassword" android:layout_marginTop="5dp"
                    android:layout_below="@+id/editTextEmail3"
                    android:background="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                    android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginBottom="20dp"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>