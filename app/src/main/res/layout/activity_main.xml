<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/headerTxt" app:fontFamily="cursive"
            android:textColor="@color/colorPrimary" android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.043"/>
    <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:fontFamily="cursive"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:id="@+id/newThingTxt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/headerTxt" app:layout_constraintHorizontal_bias="0.481"
            android:hint="@string/newthingtodo" android:textColor="@color/colorPrimary"/>
    <Button
            android:text="@string/add"
            android:layout_width="117dp"
            android:layout_height="19dp"
            android:id="@+id/addNewThingBtn"
            android:textColor="@color/colorAccent"
            app:fontFamily="cursive"
            android:background="@color/colorPrimaryDark" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/newThingTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="@string/viewtoDoList"
            android:layout_width="321dp"
            android:layout_height="64dp"
            android:id="@+id/viewToDoListBtn" app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorAccent"
            app:fontFamily="cursive"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="212dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>

</android.support.constraint.ConstraintLayout>