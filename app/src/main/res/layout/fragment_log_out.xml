<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".LogOutFragment">

    <RelativeLayout  android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:padding="15dp"
                     android:background="@color/common_google_signin_btn_text_dark_default">

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/colorAccent">

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/common_google_signin_btn_text_dark_default"
                            android:layout_margin="5dp"
                            android:layout_centerInParent="true">

                <ImageView
                        android:src="@color/colorAccent"
                        android:layout_width="151dp"
                        android:layout_height="94dp" android:id="@+id/imageLoutOut"
                        android:layout_centerHorizontal="true" android:layout_marginTop="20dp"/>
                <TextView
                        android:text="Are you sure you want to sign out?"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimary" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:textSize="18sp"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/imageLoutOut"/>

                <Button
                        android:text="Yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonSignOut"
                        android:layout_below="@+id/textView13"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
                        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>